---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import BaseHead from "../components/Head/BaseHead.astro"
import { IBreadcrumbSingle } from "../components/Breadcrumb.astro"
import Scripts from "../components/Scripts.astro"

export interface Props {
  title: string
  breadcrumb?: IBreadcrumbSingle[]
  class?: string
}

const { title, breadcrumb } = Astro.props
---

<!DOCTYPE html>
<html lang="en" class="scroll-behavior">
  <BaseHead title={title} />
  <body class="flex flex-col min-h-screen">
    <Header
      breadcrumb={breadcrumb}
      class="px-4 sm:px-6 md:px-4 lg:px-2 xl:px-0"
    />
    <main
      class={`px-6 py-6 md:py-8 sm:px-8 md:px-10 xl:px-0${
        Astro.props.class ? " " + Astro.props.class : ""
      }`}
    >
      <slot />
    </main>
    <Footer />

    <style is:global>
      /* html {
    scroll-behavior: smooth;
  } */
      #faq {
        scroll-margin-top: 4.5em;
      }
    </style>
    <Scripts />
  </body>
</html>
