---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import BaseHead from "../components/Head/BaseHead.astro"
import { IBreadcrumbSingle } from "../components/Breadcrumb.astro"
import Scripts from "../components/Scripts.astro"
import bannerImg from "../assets/banner.jpeg"

export interface Props {
  title: string
  breadcrumb?: IBreadcrumbSingle[]
  class?: string
  showBanner?: boolean
}

const { title, breadcrumb, showBanner = false } = Astro.props
---

<!DOCTYPE html>
<html lang="en" class="scroll-behavior">
  <BaseHead title={title} />
  <body class="flex flex-col min-h-screen">
    <Header
      breadcrumb={breadcrumb}
      class="px-4 sm:px-6 md:px-4 lg:px-2 xl:px-0"
    />
    {
      showBanner && (
        <img
          src={bannerImg.src}
          alt="Banner"
          class="object-cover h-32 sm:h-40 md:h-52 lg:h-60"
        />
      )
    }
    <div id="wrapper">
      <slot name="sidebar" />
      <main
        class={`col-start-2 row-start-1 px-6 py-6 md:py-8 sm:px-8 md:px-10 lg:px-2 xl:px-0 overflow-x-auto${
          Astro.props.class ? " " + Astro.props.class : ""
        }`}
      >
        <slot />
      </main>
    </div>
    <Footer />
    <Scripts />
    <style>
      #wrapper {
        display: grid;
        grid-template-columns: 1fr minmax(auto, 1024px) 1fr;
      }
    </style>
    <style is:global>
      .responsive-table {
        @apply mt-8 mb-8 overflow-x-auto;
      }
      .responsive-table table {
        @apply mt-0 mb-0;
      }
    </style>
  </body>
</html>
