---
import Layout from "../../layouts/Layout.astro"
import PeopleCard from "../../components/PeopleCard.astro"
import vorstandJson from "../../data/ueberuns-vorstand.json"

const breadcrumbs = [
  { title: "Ãœber uns", href: "/ueber-uns/" },
  { title: "Vorstand" },
]

const persons = vorstandJson.vorstand
---

<Layout title="Vorstand" breadcrumb={breadcrumbs}>
  <div class="max-w-screen-lg mx-auto">
    <h1 class="col-span-2 mb-6 text-2xl sm:text-4xl font-bold text-gray-800">
      Vorstand
    </h1>
    <ul class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        persons.map((person) => (
          <PeopleCard
            name={person.name}
            function={person.function}
            email={person.email}
            phone={person.phone}
            image={person.image}
          />
        ))
      }
    </ul>
  </div>
</Layout>
