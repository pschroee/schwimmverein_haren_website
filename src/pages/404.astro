---
import Layout from "../layouts/Layout.astro"
import DownloadItem from "../components/DownloadItem.astro"
import { FileTypeIcon } from "../types"
import downloadsJson from "../data/footer-downloads.json"
import Heading1 from "../components/Base/heading1.astro"
const downloadItems = downloadsJson.downloads as {
  filename: string
  filetype: FileTypeIcon
  label: string
}[]
---

<Layout title="404" breadcrumb={[{ title: "404" }]}>
  <div class="max-w-screen-lg mx-auto">
    <Heading1 class="col-span-2 mb-6">404 - Seite nicht gefunden</Heading1>
    <p class="text-lg">Die angeforderte Seite konnte nicht gefunden werden.</p>
    <a
      href="/"
      class="text-white mt-6 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center"
    >
      Startseite
      <svg
        aria-hidden="true"
        class="ml-2 -mr-1 w-5 h-5"
        fill="currentColor"
        viewBox="0 0 20 20"
        xmlns="http://www.w3.org/2000/svg"
        ><path
          fill-rule="evenodd"
          d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>
</Layout>
